        <activity android:name="movies.MoviesBio" />
        <activity android:name="movies.MoviesAnimated" />
        <activity android:name="movies.MoviesAction" />
        <activity android:name=".MainPage" />
        <activity android:name=".SignInPage" />
        <activity android:name=".LoginPage" />
